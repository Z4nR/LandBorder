// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  user_id     String      @id @default(uuid())
  user_name   String      @unique() @db.VarChar(10)
  full_name   String?     @db.VarChar(30)
  password    String
  admin       Boolean     @default(false)
  description String?     @db.Text()
  created_at  DateTime    @default(now())
  update_at   DateTime    @updatedAt
  place       PlaceData[]

  @@fulltext([full_name])
}

model PlaceData {
  place_id          String   @id @default(uuid())
  place_name        String
  place_owner       String?
  place_address     String   @db.MediumText()
  place_description String?  @db.LongText()
  place_type        String
  place_map         PlaceMap @relation(fields: [map_id], references: [map_id])
  map_id            String   @unique
  user              User     @relation(fields: [user_id], references: [user_id])
  user_id           String
  created_by        String?
  created_at        DateTime @default(now())
  updated_by        String?
  update_at         DateTime @updatedAt

  @@index([user_id])
  @@fulltext([place_name])
}

model PlaceMap {
  map_id        String     @id @default(uuid())
  place_geojson Json
  place_data    PlaceData?
  created_by    String?
  created_at    DateTime   @default(now())
  updated_by    String?
  update_at     DateTime   @updatedAt
}
